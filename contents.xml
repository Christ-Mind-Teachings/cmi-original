---
layout: null
---

{% assign siteurl = "https://www.christmind.info" %}

{
  "site": {
    "title": "{{site.title}}",
    "desc": "{{site.description}}",
    "url": "{{siteurl}}"
  },
  "contents": [
  {% for collection in site.collections %}
    {% if collection.label != "posts" %}
      {
        "source": "{{ collection.label }}",
        "title": "{{collection.title}}",
        "url": "{{collection.url | prepend: siteurl}}",
        "book": [
          {% for book in collection.docs %}
            {% if book.book %}
              {
                "title": "{{book.book}}",
                "url": "{{book.url | prepend: siteurl}}",
              },
            {% endif %}
          {% endfor %}
        ]
      }
    {% endif %}
  {% endfor %}
  ]
}

